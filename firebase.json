{
    "hosting": {
        "public": ".",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**",
            ".env",
            "server.js",
            "prisma/**",
            "routes/**",
            "package.json",
            "package-lock.json",
            "*.log",
            "migrar-agora.js",
            "criar-admin.js",
            "teste-email.js"
        ],
        "headers": [
            {
                "source": "/sw.js",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    }
                ]
            },
            {
                "source": "/manifest.json",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache"
                    }
                ]
            }
        ]
    }
}
